<?xml version="1.0" encoding="utf-8"?>
<Window size="400,300" roundcorner="5,5" caption="0,0,0,35" sizebox="4,4,6,6" >
	<Font name="宋体" size="20" />
	<Font name="宋体" size="20" bold="true" />
	<Font name="宋体" size="15" />
	<Font name="宋体" size="15" bold="true" />
	<Font name="宋体" size="12" />
	<Font name="宋体" size="12" bold="true" />
	<VerticalLayout >
		<HorizontalLayout height="35" bkcolor="#FF1868c2" inset="5,0,5,0">	<!-- Title -->
			<Label text="文件修复器" font="1" />
			<Control />
			<Button name="minbtn"   text="-" hottextcolor="#FFff0000" height="20" width="20" font="1" padding="0,9,0,0" /> 
			<Button name="closebtn" text="X" hottextcolor="#FFff0000" height="20" width="20" font="1" padding="0,5,0,0" />
		</HorizontalLayout>
		<VerticalLayout inset="5,5,5,5" bkcolor="#FF1868c2" bkcolor2="#FF06b1ab" bkcolor3="#FF1868c2">
			<HorizontalLayout height="150" childpadding="5">
				<List name="files_list" width="305" vscrollbar="true" bkcolor="#" inset="5,0,5,0" bordersize="1" bordercolor="#FFaaaaaa" borderround="5,5">
					<ListHeader height="27" menu="true">
						<ListHeaderItem text="修复文件路径列表" font="3" />
					</ListHeader>
				</List>
				<VerticalLayout width="80" childpadding="10">
					<Control />
					<Button name="add_file" text="添加文件" height="30" bkcolor="#" hottextcolor="#FFaaaaaa" pushedtextcolor="FF000000" bordersize="1" bordercolor="#FFaaaaaa" borderround="5,5"/>
					<Button name="add_folder" text="添加文件夹" height="30" bkcolor="#" hottextcolor="#FFaaaaaa" pushedtextcolor="FF000000" bordersize="1" bordercolor="#FFaaaaaa" borderround="5,5"/>
					<Button name="clear" text="清空列表" height="30" bkcolor="#" hottextcolor="#FFaaaaaa" pushedtextcolor="FF000000" bordersize="1" bordercolor="#FFaaaaaa" borderround="5,5"/>
					<Control />
				</VerticalLayout>
			</HorizontalLayout>
			<Control />
			<Label name="prompt" text="暂无进行修复工作" />
			<Control />
			<Progress name="progress" height="10" hor="true" min="0" max="50" value="0" bordersize="1" bordercolor="#FFaaaaaa" borderround="5,5"/>
			<Control />
			<Button name="fix" text="修  复" font="1" height="50" bkcolor="#" hottextcolor="#FFaaaaaa" pushedtextcolor="FF000000" bordersize="1" bordercolor="#FFaaaaaa" borderround="5,5" />
		</VerticalLayout>
	</VerticalLayout>
</Window>