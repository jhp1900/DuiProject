        <Control />
      </HorizontalLayout>
      <VerticalLayout childpadding="5">
        <Control />
        <HorizontalLayout height="30" inset="0,3,0,3">
          <Control />
          <Label width="50" font="4" align="center" text="主人公：" />
          <Edit name="owner" width="120" bordercolor="#44444444" bordersize="1" />
