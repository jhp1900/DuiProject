<?xml version="1.0" encoding="utf-8"?>
<Window >
	<Font name="宋体" size="20" />
	<Font name="宋体" size="20" bold="true" />
	<Font name="宋体" size="15" />
	<Font name="宋体" size="15" bold="true" />
	<Font name="宋体" size="12" />
	<Font name="宋体" size="12" bold="true" defult="true"/>
	<VerticalLayout >
		<VerticalLayout name="login_layout" bkcolor="#FF1868c2" bkcolor2="#FF06b1ab" bkcolor3="#FF1868c2" inset="10,5,10,5" >
			<VerticalLayout >
				<Control />
				<HorizontalLayout height="110">
					<Control />
					<Label name="head_label" width="80" height="80" borderround="80,80" bkimage="res\head.png"/>
					<Control />
				</HorizontalLayout>
				<HorizontalLayout height="25">
					<Control />
					<Edit name="user_name_login" width="120" height="25" bkcolor="#00000000" borderround="3,3" bordersize="1" bordercolor="#12345678"/>
					<Control />
				</HorizontalLayout>
				<Control height="10" />
				<HorizontalLayout height="25">
					<Control />
					<Edit name="password_login" width="120" height="25" bkcolor="#00000000" borderround="3,3" bordersize="1" bordercolor="#12345678" password="true"/>
					<Control />
				</HorizontalLayout>
				<Control height="20" />
				<HorizontalLayout height="30">
					<Control />
					<Button name="reset_btn" text="重置" borderround="3,3" bordersize="1" bordercolor="#12345678"/>
					<Control width="10" />
					<Button name="login_btn" text="登录" borderround="3,3" bordersize="1" bordercolor="#12345678"/>
					<Control />
				</HorizontalLayout>
				<Control height="70"/>
				<HorizontalLayout height="20">
					<Label text="没有账号？点击这里" width="110" font="4" align="center" />
					<Button name="goto_logon_btn" text="注册" width="30" font="5" textcolor="#ff0ff000" borderround="3,3" bordersize="1" bordercolor="#12345678"/>
				</HorizontalLayout>
			</VerticalLayout>
		</VerticalLayout>
		<VerticalLayout name="logon_layout" bkcolor="#FF1868c2" bkcolor2="#FF06b1ab" bkcolor3="#FF1868c2" inset="10,5,10,10" visible="false">
			<Control />
      <HorizontalLayout height="110">
        <Control />
        <Button name="head_btn" width="80" height="80" borderround="80,80" bkimage="res\head.png"/>
        <Control />
      </HorizontalLayout>
      <HorizontalLayout height="25">
        <Control />
        <Label text="用户名:" width="55" align="right"/>
        <Control width="5" />
        <Edit name="user_name_logon" width="120" height="25" bkcolor="#00000000" borderround="3,3" bordersize="1" bordercolor="#12345678"/>
        <Control />
      </HorizontalLayout>
      <Control height="10" />
      <HorizontalLayout height="25">
        <Control />
        <Label text="密码:" width="55" align="right"/>
        <Control width="5" />
        <Edit name="password_logon" width="120" height="25" bkcolor="#00000000" borderround="3,3" bordersize="1" bordercolor="#12345678" password="true"/>
        <Control />
      </HorizontalLayout>
      <Control height="10" />
      <HorizontalLayout height="25">
        <Control />
        <Label text="再次输入:" width="55" align="right"/>
        <Control width="5" />
        <Edit name="password_again" width="120" height="25" bkcolor="#00000000" borderround="3,3" bordersize="1" bordercolor="#12345678" password="true"/>
        <Control />
      </HorizontalLayout>
      <Control height="10" />
      <HorizontalLayout height="30">
				<Control />
        <Button name="cancel_btn" text="取消" borderround="3,3" bordersize="1" bordercolor="#12345678"/>
        <Control width="10" />
        <Button name="logon_btn" text="注册" borderround="3,3" bordersize="1" bordercolor="#12345678"/>
        <Control />
      </HorizontalLayout>
      <Control />
		</VerticalLayout>
	</VerticalLayout>
</Window>