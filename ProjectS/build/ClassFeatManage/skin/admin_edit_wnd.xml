<?xml version="1.0" encoding="utf-8"?>
<Window size="300,400" caption="0,0,0,30">
  <Font name="Arial" size="14" bold="true" italic="false" default="true" />
  <VerticalLayout bkimage="file='res\bkimage.png' source='0,0,1920,1080'">
    <HorizontalLayout height="30"  bkimage="file='res\title.png' source='4,1,230,50'">
      <Control height="24" width="24" bkimage="file='res\LOGO.png'" padding="0,3,0,0" />
      <Control width="10" />
      <Text name="caption" text="人员添加" textcolor="#ffb1b2b4" textpadding="2,6,0,0" />
      <HorizontalLayout float="true" pos="-25,6,-7,22" >
        <Button name="closebtn" tooltip="#close" width="16" height="16" normalimage="file='res\min_close1.png' source='16,0,32,16'" hotimage="file='res\min_close1.png' source='16,16,32,32'" />
      </HorizontalLayout>
    </HorizontalLayout>
    <VerticalLayout inset="0,0,0,20">
      <Control />
      <HorizontalLayout height="35" inset="20,0,20,0">
        <Label text="ID 号:" width="70" align="center" textcolor="#ffaaaaaa" />
        <Edit name="ID" height="32" align="center" textcolor="#ffaaaaaa" bkcolor="#ff141414" bordercolor="#ff414141" bordersize="1" nativebkcolor="#ff141414" readonly="false" />
      </HorizontalLayout>
      <Control height="10" />
      <HorizontalLayout height="35" inset="20,0,20,0">
        <Label text="用户名:" width="70" align="center" textcolor="#ffaaaaaa" />
        <Edit name="user_name" height="32" align="center" textcolor="#ffaaaaaa" bkcolor="#ff141414" bordercolor="#ff414141" bordersize="1" nativebkcolor="#ff141414" />
      </HorizontalLayout>
      <Control height="10" />
      <HorizontalLayout height="20">
        <Control />
        <RadioBox name="sex_waman" width="37" text="女" textcolor="#ffdddddd" disabledtextcolor="#ff666666" textpadding="23,0,0,0" align="left" height="23" normalimage="file='res\radio.png' dest='5,5,18,18' source='0,0,13,13'" hotimage="file='res\radio.png' dest='5,5,18,18' source='0,13,13,26'" selectedimage="file='res\radio.png' dest='5,5,18,18' source='0,26,13,39'" group="key_signal_select" selected="true" />
        <Control />
        <RadioBox name="sex_man" width="37" text="男" textcolor="#ffdddddd" disabledtextcolor="#ff666666" textpadding="23,0,0,0" align="left" height="23" normalimage="file='res\radio.png' dest='5,5,18,18' source='0,0,13,13'" hotimage="file='res\radio.png' dest='5,5,18,18' source='0,13,13,26'" selectedimage="file='res\radio.png' dest='5,5,18,18' source='0,26,13,39'" group="key_signal_select" />
        <Control />
      </HorizontalLayout>
      <VerticalLayout name="pwd_area" height="135" visible="false">
        <Control height="10" />
        <HorizontalLayout height="35" inset="20,0,20,0">
          <Label text="原密码:" width="70" align="center" textcolor="#ffaaaaaa" />
          <Edit name="pwd" height="32" align="center" textcolor="#ffaaaaaa" bkcolor="#ff141414" bordercolor="#ff414141" bordersize="1" nativebkcolor="#ff141414" password="true" />
        </HorizontalLayout>
        <Control height="10" />
        <HorizontalLayout height="35" inset="20,0,20,0">
          <Label text="新密码:" width="70" align="center" textcolor="#ffaaaaaa" />
          <Edit name="pwd1" height="32" align="center" textcolor="#ffaaaaaa" bkcolor="#ff141414" bordercolor="#ff414141" bordersize="1" nativebkcolor="#ff141414" password="true" />
        </HorizontalLayout>
        <Control height="10" />
        <HorizontalLayout height="35" inset="20,0,20,0">
          <Label text="请确认:" width="70" align="center" textcolor="#ffaaaaaa" />
          <Edit name="pwd2" height="32" align="center" textcolor="#ffaaaaaa" bkcolor="#ff141414" bordercolor="#ff414141" bordersize="1" nativebkcolor="#ff141414" password="true" />
        </HorizontalLayout>
      </VerticalLayout>
      <Control height="10" />
      <HorizontalLayout height="30" inset="20,0,20,0">
        <Container width="125">
          <ComboBox name="college" textpadding="5,0,0,0" itemselectedtextcolor="#ffaaaaaa" itemlinecolor="#ffaaaaaa" bkcolor="#dd222222" bordercolor="#44444444" bordersize="1">
            <ListLabelElement text="通信工程" selected="true" />
            <ListLabelElement text="电子工程" />
            <ListLabelElement text="计算机" />
            <ListLabelElement text="经管" />
            <ListLabelElement text="人文" />
            <ListLabelElement text="艺术" />
            <ListLabelElement text="舞蹈" />
          </ComboBox>
          <Label mouse="false" float="true" pos="-30,0,-29,30" bordercolor="#44444444" bordersize="1"/>
          <Control mouse="false" float="true" pos="-20,12,-9,23" bkimage="file='res\triangle.png'" />
        </Container>
        <Control width="10" />
        <Container width="125">
          <ComboBox name="subject" textpadding="5,0,0,0" itemselectedtextcolor="#ffaaaaaa" itemlinecolor="#ffaaaaaa"  bkcolor="#dd222222" bordercolor="#44444444" bordersize="1">
            <ListLabelElement text="高等数学" selected="true" />
            <ListLabelElement text="复变" />
            <ListLabelElement text="大学物理" />
            <ListLabelElement text="C语言" />
            <ListLabelElement text="电路分析" />
            <ListLabelElement text="数电" />
            <ListLabelElement text="模电" />
            <ListLabelElement text="高频" />
            <ListLabelElement text="计算机网络" />
          </ComboBox>
          <Label mouse="false" float="true" pos="-30,0,-29,30" bordercolor="#44444444" bordersize="1"/>
          <Control mouse="false" float="true" pos="-20,12,-9,23" bkimage="file='res\triangle.png'" />
        </Container>
      </HorizontalLayout>
      <Control />
      <HorizontalLayout height="35" inset="20,0,20,0">
        <Button name="okbtn" text="确定" textcolor="#dddddddd" borderround="5,5" normalimage="file='res\button.png' source='0,0,93,50'" hotimage="file='res\button.png' source='93,0,186,50'" />
        <Control width="10" />
        <Button name="closebtn" text="取消" textcolor="#dddddddd" borderround="5,5" normalimage="file='res\button.png' source='0,0,93,50'" hotimage="file='res\button.png' source='93,0,186,50'" />
      </HorizontalLayout>
    </VerticalLayout>
  </VerticalLayout>
</Window>